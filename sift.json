{
  "name": "sift-pixel-tracker",
  "display-name": "Pixel Tracker",
  "description": "This sift detects emails that are being tracked",
  "author": "Deepak Prabhakara",
  "version": "1.0.0",
  "color": "#842F59",
  "image": "https://static.redsift.io/assets/sifts/sift-pixel-tracker/cctv.jpg",
  "interfaces": {
    "email": {
      "thread": {
        "controller": "frontend/controller.js"
      }
    },
    "summary": {
      "controller": "frontend/controller.js"
    }
  },
  "dag": {
    "inputs": {
      "emails": {
        "trackers": {
          "filter": {
            "conditions": [
              {
                "date": "between now and 1 month before now"
              }
            ],
            "wants": [
              "archive",
              "htmlBody",
              {
                "feature": "attachments",
                "parameter": "attachments"
              }
            ]
          }
        }
      }
    },
    "nodes": [
      {
        "#": "Messages mapper",
        "implementation": {
          "javascript": "server/map.js",
          "qos": {
            "large-storage": [
              "attachments:ro"
            ]
          }
        },
        "input": {
          "bucket": "trackers"
        },
        "outputs": {
          "idList": {},
          "threads": {}
        }
      },
      {
        "#": "Threads aggregator",
        "implementation": {
          "javascript": "server/threads.js"
        },
        "input": {
          "bucket": "threads",
          "select": "/*"
        },
        "outputs": {
          "tidList": {}
        }
      }
    ],
    "stores": {
      "threads": {
        "key$schema": "string/string"
      }
    },
    "outputs": {
      "exports": {
        "idList": {
          "import": "_id.list"
        },
        "tidList": {
          "import": "_tid.list"
        }
      }
    }
  }
}